<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    android:orientation="horizontal"
    tools:context="dsa.hcmiu.a2048pets.PlayActivity">

    <RelativeLayout
        android:id="@+id/ctnFunc"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/tvContainer"
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="score"
                android:fontFamily="@font/comic"
                android:textColor="#000"
                android:textSize="@dimen/d_txtScore" />

            <TextView
                android:id="@+id/tvKey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="key"

                android:fontFamily="@font/comic"
                android:textColor="#000"
                android:textSize="@dimen/d_txtScore"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvUndo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Undo"
            android:textColor="#000"
            android:textSize="@dimen/d_txtScore"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvContainer"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUndo"
            android:layout_centerHorizontal="true"
            android:padding="20dp">
            <Button
                android:id="@+id/btnUndo"
                android:layout_width="@dimen/d_fbicon"
                android:layout_height="@dimen/d_fbicon"
                android:background="@drawable/reverse"
                android:layout_below="@+id/tvContainer"
                android:layout_margin="@dimen/d_marginFBtnPlay"/>
            <Button
                android:id="@+id/btnNewGame"
                android:layout_width="@dimen/d_fbicon"
                android:layout_height="@dimen/d_fbicon"
                android:background="@drawable/newgame"
                android:layout_toRightOf="@id/btnUndo"
                android:layout_below="@+id/tvContainer"
                android:layout_margin="@dimen/d_marginFBtnPlay"/>
            <Button
                android:id="@+id/btnSoundPlay"
                android:background="@drawable/sound"
                android:layout_width="@dimen/d_fbicon"
                android:layout_height="@dimen/d_fbicon"
                android:layout_toRightOf="@id/btnNewGame"
                android:layout_below="@+id/tvContainer"
                android:layout_margin="@dimen/d_marginFBtnPlay"/>
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gvMatrix"
        android:layout_width="@dimen/d_grid"
        android:layout_height="@dimen/d_grid"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="340dp"
        android:layout_marginTop="24dp"
        android:numColumns="4"
        android:paddingBottom="10dp"
        android:scrollbars="none"></GridView>

</RelativeLayout>